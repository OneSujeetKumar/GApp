<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartPage">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60"
        android:textAlignment="center"
        app:tabGravity="center"
        android:background="@color/lgrey"
        app:tabIndicatorColor="@color/ddgrey"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/ddgrey"
        app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:tabTextColor="@color/mgrey" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dummy"/>

</LinearLayout>